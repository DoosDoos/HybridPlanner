@model HybridPlanner.Models.Party

@{
    ViewData["Title"] = "Details";
}

<h1>Feest Overzicht</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Feest Naam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartyName)
        </dd>
        <dt class = "col-sm-2">
            Feest Beschrijving
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartyDescription)
        </dd>
        <dt class = "col-sm-2">
            Feest Datum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartyDate)
        </dd>
    </dl>
</div>
<h2>Gekoppelde Locaties</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Straatnaam
            </th>
            <th>
                Huisnummer
            </th>
            <th>
                Postcode
            </th>
            <th>
                Locatie
            </th>
            <th>
                Geschatte gasten
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Location)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartyLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GuestEstimate)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Terug naar de lijst</a>
</div>
