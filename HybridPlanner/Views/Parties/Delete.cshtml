@model HybridPlanner.Models.Party

@{
    ViewData["Title"] = "Delete";
}

<h1>Feest Verwijderen</h1>

<h3>Weet je zeker dat je dit feest wilt verwijderen?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Feest Naam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartyName)
        </dd>
        <dt class = "col-sm-2">
            Feest Beschrijving
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartyDescription)
        </dd>
        <dt class = "col-sm-2">
            Feest Datum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartyDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar de lijst</a>
    </form>
</div>
