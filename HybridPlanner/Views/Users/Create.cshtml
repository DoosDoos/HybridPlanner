@model HybridPlanner.Models.User

@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>
<h1>Gebruiker Aanmaken</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailAdress" class="control-label">E-mail Adres</label>
                <input asp-for="EmailAdress" class="form-control" />
                <span asp-validation-for="EmailAdress" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Gebruiker Aanmaken" class="Home-Button" />
            </div>
        </form>
    </div>
</div>

